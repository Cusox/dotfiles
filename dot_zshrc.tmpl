# Oh My Zsh
export ZSH=$HOME/.oh-my-zsh

# Theme
ZSH_THEME="agnoster"

# Plugins
plugins=(
    git
    z
    zsh-autosuggestions
    zsh-syntax-highlighting
)

source $ZSH/oh-my-zsh.sh

# PATH
if ! [[ "$PATH" =~ "$HOME/.local/bin" ]]
then
    PATH="$HOME/.local/bin:$PATH"
fi

if [[ -d $HOME/.cargo/bin ]]
then
  PATH="$HOME/.cargo/bin:$PATH"
fi

# Alias
[ -f ~/.local/bin/rg ] && alias grep='rg'

# Editor
if [[ -f ~/.local/bin/nvim ]]
then
  alias vim='nvim'
  export EDITOR=nvim
else
  export EDITOR=vim
fi

# Hook
eval "$(vfox activate zsh)"
